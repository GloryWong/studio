{
  "name": "@gloxy/studio",
  "description": "Manage local projects and demos in one place instantly and smoothly.",
  "version": "0.0.3",
  "author": "Glory Wong Zhaohui <glorywong1001@gmail.com>",
  "bin": {
    "gs": "./bin/demo.js"
  },
  "bugs": "https://github.com/GloryWong/studio/issues",
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    ".env"
  ],
  "homepage": "https://github.com/GloryWong/studio#readme",
  "keywords": [
    "demo",
    "play",
    "instant",
    "playground"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GloryWong/studio.git"
  },
  "scripts": {
    "dev": "npm run clean && npm run copy && tsc --sourceMap true --watch",
    "build": "npm run clean && tsc && npm run copy",
    "copy": "recursive-copy --dot true --overwrite true src/template ./lib/template",
    "clean": "rimraf lib/",
    "test": "exit 0",
    "link-test": "node ./scripts/link-test.js",
    "unlink-test": "node ./scripts/link-test.js --not",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "lint": "eslint --ext .js,.ts --fix src/",
    "prettier": "prettier --write --ignore-unknown src/"
  },
  "dependencies": {
    "@gloxy/unilog": "^1.0.0",
    "boxen": "^5.0.1",
    "cfonts": "^2.9.3",
    "chalk": "^4.1.1",
    "cli-columns": "^3.1.2",
    "commander": "^8.0.0",
    "conf": "^10.0.1",
    "dotenv-flow": "^3.2.0",
    "execa": "^5.1.1",
    "fuse.js": "^6.4.6",
    "inquirer": "^8.1.0",
    "inquirer-autocomplete-prompt": "^1.4.0",
    "listr": "^0.14.3",
    "lodash": "^4.17.21",
    "luxon": "^1.27.0",
    "mkdirp": "^1.0.4",
    "node-localstorage": "^2.2.1",
    "ora": "^5.4.0",
    "pkg-install": "^1.0.0",
    "recursive-copy": "^2.0.13",
    "tslib": "^2.3.0",
    "uid": "^2.0.0"
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.1.0",
    "@types/inquirer": "^7.3.1",
    "@types/inquirer-autocomplete-prompt": "^1.3.2",
    "@types/listr": "^0.14.3",
    "@types/luxon": "^1.27.1",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^16.0.0",
    "@types/node-localstorage": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "commitlint": "^12.1.4",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "global-dirs": "^3.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "prettier-eslint": "^12.0.0",
    "recursive-copy-cli": "^1.0.17",
    "rimraf": "^3.0.2",
    "symlink-dir": "^5.0.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "npm run prettier"
    ]
  }
}
